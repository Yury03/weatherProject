<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".city">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp" app:srcCompat="@drawable/rectangle80" android:id="@+id/imageView7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rectangle81"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            android:contentDescription="TODO"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/textHintFindCity"
            android:ems="10"
            android:id="@+id/editTextCity"
            android:autofillHints=""
            android:textColorHint="@color/hint_color"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            tools:ignore="TouchTargetSizeCheck" android:textColor="@color/text_color"
            android:fontFamily="sans-serif"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:background="@color/alfa"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginEnd="8dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck"
            android:contentDescription="TODO" android:onClick="findCityBut"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/back_button" android:id="@+id/backButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" android:onClick="finishThisActivity"
            android:background="@color/alfa"/>

</androidx.constraintlayout.widget.ConstraintLayout>